init_config:

instances:
<% $servertags = scope.function_split([description, ","]) -%>
<% $servertags.each do |servertag| -%>
<% if servertag == "mysql" -%>
  - server: localhost
    user: datadog
    pass: <%= ddmysqlpwd %>
<% end -%>
<% end -%>
<% $servertags = scope.function_split([description, ","]) -%>
<% $servertags.each do |servertag| -%>
<% if servertag == "slave" -%>
    options: 
        replication: 1
<% end -%>
<% end -%>